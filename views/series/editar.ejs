
<%- include('../partials/header') %>

<section id="about">
  <div class="container text-white mt-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2>Editar Série</h2>
        <form method="post" >
            <div class="mb-3">
              <label for="nome" class="form-label">Nome</label>
              <% if(errors && errors.indexOf('name')>=0){ %> 
                <p>Por favor, informe o nome da serie</p>
             <% } %> 
              <input value = '<%= serie.name %>' type="text" class="form-control" id="nome" aria-describedby="nomeHelp" name='name' placeholder="Digite o nome da Série">
            </div>
            <p>Status</p>
            <select class="form-select" aria-label="Default select example" name ='status' defaultValue = '<%= serie.status %> '>
                <% labels.forEach(label =>{%> 
                    
                    <option value="<%= label.id %>" <% if(label.id === serie.status){%> selected = 'selected' <% }  %> ><%= label.name %> </option>
                <% })  %> 
                
              </select>  
            <button type="submit" class="btn btn-primary mt-2">Salvar</button>
          </form>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>