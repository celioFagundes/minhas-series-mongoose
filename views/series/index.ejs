
<%- include('../partials/header') %>

<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2>Series</h2>
        <p class="lead">Todas as séries cadastradas</p>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Status</th>
                </tr>
            </thead>
            <a href ='/series/nova' class="btn btn-info mb-2">Adicionar uma série</a>
            <tbody>
                <% series.forEach(serie => {%> 
                    <tr>
                        <td><%= serie.name %></td>
                        <td><%= serie.status %></td>
                    </tr>
                <%  })%> 
            </tbody>
            
        </table>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>